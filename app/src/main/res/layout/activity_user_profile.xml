<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:id="@+id/layout_upload_avatar">

    <include layout="@layout/common_head_title_white" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/common_head_title"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_user_profile_avatar"
            android:layout_width="fill_parent"
            android:layout_height="119dp">
            <TextView
                android:id="@+id/tv_user_name_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="11dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_profile_avatar"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/user_arrow0"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dip"
                android:scaleType="centerCrop"
                android:src="@drawable/right_arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/iv_user_profile_avatar"
                android:layout_toLeftOf="@+id/user_arrow0"
                android:layout_centerVertical="true"
                android:layout_margin="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/contactlogo"
                android:layout_width="60dip"
                android:layout_height="60dip" />

        </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_pressed"/>
    <RelativeLayout
        android:id="@+id/layout_user_profile_username"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="11dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/user_profile_name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_weight="1" />
       <ImageView
           android:id="@+id/user_arraw1"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_margin="8dip"
           android:scaleType="centerCrop"
           android:src="@drawable/right_arrow_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_pressed"/>
        <RelativeLayout
            android:id="@+id/layout_user_profile_usernam"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:paddingTop="10dp"
            android:paddingBottom="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="11dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_profile_Uname"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/user_arraw2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dip"
                android:scaleType="centerCrop"
                android:src="@drawable/right_arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_Logout"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tb_btn_login_orange_normal"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="@string/logout"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
